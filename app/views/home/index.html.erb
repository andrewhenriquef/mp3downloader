<div class="text-center">
  <h1>Baixa musica app</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="card" style="width: 50rem;">
    <div class="card-body text-center">
      <h5 class="card-title">Baixe suas músicas diretamente do youtube</h5>
      <%= form_tag(home_download_path, method: :get, id: 'download_music_form') do %>
        <p class="card-text">Insira nesse campo de texto abaixo o link para realizarmos o download da música para você</p>
        <div class="form-group mb-3">
          <%= text_field_tag :youtube_url, nil, class: 'form-control', placeholder: 'http://www.youtube.com/...' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Baixar música', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

